<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputDisplay"
        android:layout_width="407dp"
        android:layout_height="173dp"
        android:layout_margin="8dp"
        android:fontFamily="sans-serif-black"
        android:gravity="end|bottom"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="70sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="408dp"
        android:layout_height="553dp"
        android:columnCount="4"
        android:rowCount="4"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="175dp"
        app:layout_constraintTop_toBottomOf="@id/inputDisplay">

        <Button
            android:id="@+id/numBtn7"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#555"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/button_7" />
        <Button
            android:id="@+id/numBtn8"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#555"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/button_8" />
        <Button
            android:id="@+id/numBtn9"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#555"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/button_9" />
        <Button
            android:id="@+id/divideBtn"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/yellow"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="@string/divideButton" />
        <Button
            android:id="@+id/numBtn4"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#555"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/button_4" />
        <Button
            android:id="@+id/numBtn5"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#555"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/button_5" />
        <Button
            android:id="@+id/numBtn6"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#555"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/button_6" />
        <Button
            android:id="@+id/multBtn"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#f4e660"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="@string/multiplyButton" />
        <Button
            android:id="@+id/numBtn1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#555"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/button_1" />
        <Button
            android:id="@+id/numBtn2"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#555"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/button_2" />
        <Button
            android:id="@+id/numBtn3"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#555"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/button_3" />
        <Button
            android:id="@+id/subtractBtn"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#f4e660"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="@string/subtractionButton" />
        <Button
            android:id="@+id/clearBtn"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#555"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/clearButton" />
        <Button
            android:id="@+id/numBtn0"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#555"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/button_0"/>
        <Button
            android:id="@+id/equalsBtn"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#555"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/equalsButton" />
        <Button
            android:id="@+id/addBtn"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#f4e660"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="@string/addButton" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>